method graph_update_pair_reserves(reserves) {
    for delta in reserves.deltas {
        let split = delta.key.split(":");
        let id = split[0];
        let token = split[1];

        let value = delta.new_value;

        switch token {
            "x" => {
                this.push(
                    update LbPair id {
                        reserveX: value as BigInt
                    }
                );
            }
            "y" => {
                this.push(
                    update LbPair id {
                        reserveY: value as BigInt
                    }
                );
            }
        }
    }
}
